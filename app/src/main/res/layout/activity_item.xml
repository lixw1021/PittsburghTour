<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/museum_cmu_natural" />

        <TextView
            android:id="@+id/item_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:text="Carnegie Museum of Natural History" />

    </RelativeLayout>

    <RatingBar
        android:id="@+id/item_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFDF00"
        android:rating="5.0"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/item_summary_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        tools:text="Exhibition on bones, gems and ecosystem" />


</LinearLayout>