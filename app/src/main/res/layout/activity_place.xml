<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/museum_cmu_natural" />

        <TextView
            android:id="@+id/place_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Carnegie Museum of Natural History" />

        <TextView
            android:id="@+id/place_address_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            tools:text="4400 Forbes Ave, Pittsburgh, PA 15213, USA" />

        <TextView
            android:id="@+id/place_open_time_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            tools:text="Mon - Fri : 9 am -5 pm \nSat - Sun: 9 am - 8 pm" />

        <TextView
            android:id="@+id/place_phone_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            tools:text="+1 412-622-3131" />

        <TextView
            android:id="@+id/place_website_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_public_black_24dp"
            tools:text="http://cmoa.org/" />

        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            tools:text="The museum consists of" />

    </LinearLayout>

</ScrollView>