<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/museum_cmu_natural" />

        <TextView
            android:id="@+id/place_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textColor="@color/colorbalck"
            android:textSize="18sp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_title" />

        <TextView
            android:id="@+id/place_address_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_location" />

        <TextView
            android:id="@+id/place_open_time_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_open_time" />

        <TextView
            android:id="@+id/place_phone_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_phone" />

        <TextView
            android:id="@+id/place_website_text_view"
            style="@style/icon"
            android:background="?selectableItemBackground"
            android:drawableStart="@drawable/ic_public_black_24dp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_website" />

        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            tools:text="@string/top_spots_carnegie_museum_of_natural_history_description" />

    </LinearLayout>

</ScrollView>