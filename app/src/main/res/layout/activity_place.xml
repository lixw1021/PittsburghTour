<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/place_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cmunatural" />

        <TextView
            android:id="@+id/place_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Carnegie Museum of Natural History"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/place_address_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="4400 Forbes Ave, Pittsburgh, PA 15213, USA" />

        <TextView
            android:id="@+id/place_open_time_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:text="Mon - Fri : 9 am -5 pm \nSat - Sun: 9 am - 8 pm"/>

        <TextView
            android:id="@+id/place_phone_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:text="+1 412-622_3131" />

        <TextView
            android:id="@+id/place_website_text_view"
            style="@style/icon"
            android:drawableStart="@drawable/ic_public_black_24dp"
            android:text="http://cmoa.org/" />

        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:text="The museum consists of 115,000 square feet (10,700 m2) organized into 20 galleries as well as research, library, and office space. It holds some 22 million specimens, of which about 10,000 are on view at any given time and about 1 million are cataloged in online databases. In 2008 it hosted 386,300 admissions and 63,000 school group visits. Museum education staff also actively engage in outreach by traveling to schools all around western Pennsylvania."/>

    </LinearLayout>

</ScrollView>